html 
    head
        link(rel="stylesheet", href="/css/styleAdmin.css")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css' integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==' crossorigin='anonymous' referrerpolicy='no-referrer')
    body
        div(class="screen--admin")
            div(class="screen--admin__wrap")
                div(class="col-2")
                    include ../includes/left.pug
                div(class="col-10") 
                    div(class="right")
                        include ../includes/header.pug
                        hr(class="sidebar-dark")
                        div(class="main")
                            div(class="main--wrap")
                                form(action=`/admin/productList/created`, method="post" id="detailForm" enctype="multipart/form-data")
                                    h4 #{titlePage}
                                    div(class="form-group")
                                        label(for="title") Tên sản phẩm
                                        input(type="text", name="title" required) 
                                    div(class="form-group")
                                        label(for="description") Mô tả sản phẩm
                                        textarea(name="description", cols="100", rows="5" required)
                                    div(class="form-group")
                                        label(for="images") Hình ảnh sản phẩm 
                                        img(src="", srcset="" image)
                                        input( type="file" name="images" accpet="image/*" input-img required)
                                        div(class="X" ) X
                                    div(class="form-group__wrap")
                                        div(class="form-group")
                                            label(for="price") Giá sản phẩm
                                            input(type="number", name="price" required) 
                                        div(class="form-group")
                                            label(for="stock")  Số lượng
                                            input(type="number", name="stock" required) 
                                        div(class="form-group")
                                            div(class="form-group__radio" )
                                                label(for="conhang") Còn hàng
                                                    input(type="radio" name="status" value="còn hàng" id="conhang" )
                                                label(for="hethang") Hết hàng 
                                                    input(type="radio" name="status" value="hết hàng" id="hethang") 
                                    button(class="btn" type="submit") Áp dụng
        script(src="/js/productList.js")
        script(src="/js/previewImg.js")
        script(src="/js/account.js")
    