html 
    head
        link(rel="stylesheet", href="/css/styleAdmin.css")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css' integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==' crossorigin='anonymous' referrerpolicy='no-referrer')
    body
        div(class="screen--admin")
            div(class="screen--admin__wrap")
                div(class="col-2")
                    include ../includes/left.pug
                div(class="col-10") 
                    div(class="right")
                    include ../includes/header.pug
                    div(class="main")
                        hr(class="sidebar-dark")
                        div(class="main--wrap")
                                h4 Chỉnh sửa tài khoản
                                    table(class="table--2")
                                        form(action=`/admin/account/edit/${Account.id}/?_method=patch`, method="post") 
                                            tr
                                                div(class="form-group")
                                                    th
                                                        label(for="fullName") Họ và tên
                                                    th
                                                        input(type="text", name="fullName" value = Account.fullName) 
                                            tr
                                                div(class="form-group")
                                                    th
                                                        label(for="email") Email
                                                    th
                                                        input(type="email", name="email" value = Account.email)
                                            tr
                                                div(class="form-group")
                                                    th
                                                        label(for="password") Mật khẩu
                                                    th
                                                        input(type="text", name="password" value = Account.password)
                                            tr
                                                div(class="form-group")
                                                    th
                                                        label(for="phone") Số điện thoại
                                                    th
                                                        input(type="text", name="phone" value = Account.phone )
                                            tr
                                                div(class="form-group")
                                                    th
                                                        label(for="images") Hình đại diện
                                                    th
                                                        img(src="", srcset="" image)
                                                        input( type="file" name="images" input-img account-input  )
                                            button( type="submit") Cập nhật
        script(src="/js/account.js")
        script(src="/js/productList.js")
                         