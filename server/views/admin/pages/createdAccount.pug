html 
    head
        link(rel="stylesheet", href="/css/styleAdmin.css")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css' integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==' crossorigin='anonymous' referrerpolicy='no-referrer')
    body
        div(class="screen--admin")
            div(class="screen--admin__wrap")
                div(class="col-2")
                    include ../includes/left.pug
                div(class="col-10") 
                    div(class="right")
                        include ../includes/header.pug
                        div(class="main")
                            div(class="main--wrap")
                                h4 Tạo mới tài khoản
                                table(class="table--2") 
                                    form(action=`/admin/account/create`, method="post" )
                                        tr
                                            div(class="form-group")
                                                th
                                                    label(for="fullName") Họ và tên
                                                th
                                                    input(type="text", name="fullName" ) 
                                        tr
                                            div(class="form-group")
                                                th
                                                    label(for="email") Email
                                                th
                                                    input(type="email", name="email" )
                                        tr
                                            div(class="form-group")
                                                th
                                                    label(for="password") Mật khẩu
                                                th
                                                    input(type="password", name="password" )
                                        tr
                                            div(class="form-group")
                                                th
                                                    label(for="phone") Số điện thoại
                                                th
                                                    input(type="text", name="phone" )
                                        tr
                                            div(class="form-group")
                                                th
                                                    label(for="") Chức năng
                                                th
                                                    select(name='id_role')
                                                        each idRole in id_role
                                                            option(value=idRole.id) #{idRole.title}
                                        tr
                                            div(class="form-group")
                                                th
                                                    label(for="images") Hình đại diện
                                                th
                                                    img(src="", srcset="" image)
                                                    input( type="file" name="images" input-img account-input )
                                                    div(class="X" ) X
                                        button(type="submit" id="btn--submit__1") Tạo mới
    script(src="/js/previewImg.js")
    script(src="/js/account.js")                      
                                        

    