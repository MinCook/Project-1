html 
    head
        link(rel="stylesheet", href="/css/styleAdmin.css")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css' integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==' crossorigin='anonymous' referrerpolicy='no-referrer')
    body
        div(class="screen--admin")
            div(class="screen--admin__wrap")
                div(class="col-2")
                    include ../includes/left.pug
                div(class="col-10") 
                    div(class="right")
                        include ../includes/header.pug
                        hr(class="sidebar-dark")
                        div(class="main")
                            div(class="main--wrap")
                                h4 Phân quyền quản lí
                                if Roles.length >0
                                    table(class="table--1")
                                            tr 
                                                th Tên chức năng 
                                                th Mô tả
                                                th Nhóm quyền 
                                                th Xóa quyền
                                            each role in Roles 
                                                tr 
                                                    td #{role.title}
                                                    td #{role.description}
                                                    td 
                                                        each permission in role.permissions 
                                                            p #{permission}
                                                    td
                                                        button(edited="true" id = role.id)
                                                            i.fa-solid.fa-trash
                                    form(action="/admin/roles", method="post")
                                        table(class="table--2")
                                            tr
                                                th
                                                    label(for="Tên") Tên
                                                th
                                                    input(type="text", name="title")
                                            tr 
                                                th
                                                    label(for="Mô tả") Mô tả
                                                th 
                                                    input(type="text", name="description")
                                        button(type="submit") Xác nhận
                                else 
                                    h4(style="text-align:center") Chưa có phân quyền quản lí nào !
                                    form(action="/admin/roles", method="post")
                                        table(class="table--2")
                                            tr
                                                th
                                                    label(for="Tên") Tên
                                                th
                                                    input(type="text", name="title")
                                            tr 
                                                th
                                                    label(for="Mô tả") Mô tả
                                                th 
                                                    input(type="text", name="description")
                                        button(type="submit") Xác nhận
        form(path="/admin/roles", method="post"  id="deletedForm") 
        script(src="/js/role.js")
        script(src="/js/account.js")      
                            
                                            
                                                
                                   
                                    
