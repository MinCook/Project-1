html 
    head
        link(rel="stylesheet", href="/css/styleAdmin.css")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css' integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==' crossorigin='anonymous' referrerpolicy='no-referrer')
    body
        div(class="screen--admin")
            div(class="screen--admin__wrap")
                div(class="col-2")
                    include ../includes/left.pug
                div(class="col-10") 
                    div(class="right")
                        include ../includes/header.pug
                        hr(class="sidebar-dark")
                        div(class="main")
                            div(class="main--wrap")
                                each item in detailProduct
                                    form(action=`/admin/productList/editedItem/${item.id}`, method="post" id="detailForm" enctype="multipart/form-data")
                                        h4 #{titlePage}
                                        div(class="form-group")
                                            label(for="title") Tên sản phẩm
                                            span #{item.title}
                                        div(class="form-group")
                                            label(for="description") Mô tả sản phẩm
                                            span #{item.description}
                                        div(class="form-group__wrap")
                                            div(class="form-group")
                                                label(for="images") Hình ảnh sản phẩm 
                                                img(src=item.images[0], style="width:200px")
                                            div(class="form-group")
                                                div(class="form-group__hori")
                                                    label(for="price") Giá sản phẩm :
                                                    span $#{item.price}
                                                div(class="form-group__hori")
                                                    label(for="stock")  Số lượng :
                                                    span #{item.stock}
                                                div(class="form-group__hori")
                                                    label(for="stock")  Tình trạng :
                                                    span #{item.status}            
        script(src="/js/productList.js")
        script(src="/js/previewImg.js")
        script(src="/js/account.js")
    
