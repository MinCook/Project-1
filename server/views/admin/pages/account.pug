html 
    head
        link(rel="stylesheet", href="/css/styleAdmin.css")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css' integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==' crossorigin='anonymous' referrerpolicy='no-referrer')
    body
        div(class="screen--admin")
            div(class="screen--admin__wrap")
                div(class="col-2")
                    include ../includes/left.pug
                div(class="col-10") 
                    div(class="right")
                    include ../includes/header.pug
                    div(class="main")
                        hr(class="sidebar-dark")
                        div(class="main--wrap")
                                h4 Danh sách tài khoản
                                if AccountList.length > 0
                                    table(class="table--3")
                                        tr
                                            th Tên
                                            th Số điện thoại
                                            th Chỉnh sửa
                                        each item in AccountList
                                            tr 
                                                td #{item.fullName}
                                                td #{item.phone}
                                                td 
                                                    ul(class="productList--edit")
                                                        li 
                                                            button(deleted="true" id=item.id)
                                                                i.fa-solid.fa-trash
                                                        li
                                                            button(edited="true" id=item.id)
                                                                i.fa-solid.fa-pen-to-square
                                    a(href="/admin/account/create" style={"color":"black", "opacity":"80%"}) Thêm mới tài khoản
                                else 
                                    p Chưa có tài khoản nào cả
        form(action="", method="post", path="/admin/account/deleted",id="deleted")
        form(action="", method="post", path="/admin/account/edited",id="edited")
        script(src="/js/account.js")


                         