html 
    head
        link(rel="stylesheet", href="/css/styleAdmin.css")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css' integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==' crossorigin='anonymous' referrerpolicy='no-referrer')
    body
        div(class="screen--admin")
            div(class="screen--admin__wrap")
                div(class="col-2")
                    include ../includes/left.pug
                div(class="col-10") 
                    if(Roles.length >0)
                        div(class="right")
                        include ../includes/header.pug
                        div(class="main")
                            hr(class="sidebar-dark")
                            div(class="main--wrap")
                                div(class="checked d-none" value= Roles) #{Roles}
                                h4 Nhóm quyền quản lí
                                table(permission) 
                                    tr 
                                        th Tên chức năng 
                                        each role in Roles 
                                            th #{role.title}
                                    tr(name ="id")
                                        th Danh sách sản phẩm
                                        each role in Roles 
                                            td 
                                                input(type="text", name=role.id class="d-none")
                                    tr(name="view__product")
                                        td Xem 
                                        each role in Roles 
                                            td 
                                                input(type="checkbox", name="view__product") 
                                    tr(name="edit__product")
                                        td Chỉnh sửa
                                        each role in Roles 
                                            td 
                                                input(type="checkbox", name="edit__product") 
                                    tr(name="delete__product")
                                        td Xóa
                                        each role in Roles 
                                            td 
                                                input(type="checkbox", name="delete__product")
                                    tr
                                        th Thêm mới sản phẩm
                                    tr(name="view__addProduct")
                                        td Xem
                                        each role in Roles 
                                            td 
                                                input(type="checkbox", name="view__addProduct")
                                    tr(name="add__product")
                                        td Thêm mới
                                        each role in Roles 
                                            td 
                                                input(type="checkbox", name="add__product")
                                    tr
                                        th Phân quyền quản lí
                                    tr(name="view__roles")
                                        td Xem
                                        each role in Roles 
                                            td 
                                                input(type="checkbox", name="view__roles")
                                    tr(name="add")
                                        td Thêm mới
                                        each role in Roles 
                                            td 
                                                input(type="checkbox", name="add__roles")
                                    tr
                                        th Nhóm quyền quản lí
                                    tr(name="view__permissions")
                                        td Xem
                                        each role in Roles 
                                            td 
                                                input(type="checkbox", name="view__permissions")
                                    tr(name="view")
                                        td Thêm mới
                                        each role in Roles 
                                            td 
                                                input(type="checkbox", name="view")
                                    tr
                                        th Danh sách tài khoản
                                    tr(name="view__account")
                                        td Xem
                                        each role in Roles 
                                            td 
                                                input(type="checkbox", name="view__account")
                                    tr(name="edit__account")
                                        td Thêm mới
                                        each role in Roles 
                                            td 
                                                input(type="checkbox", name="edit__account")
                                button(type="submit" id="btn--submit") Cập nhật  
                                form(action="/admin/roles/?_method=patch", method="post" formSend class="d-none")
                                    input(type="text" sendPermission name="permission")    
        script(src="/js/permission.js")
                                    
                    

