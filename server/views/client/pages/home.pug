doctype html
html
    head 
        link(rel="stylesheet", href="/css/style.css")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css' integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==' crossorigin='anonymous' referrerpolicy='no-referrer')
    body
    div(class='screen')
        div(class='main')
            include ../includes/header.include.pug
            .container
                div(class='section--one')
                    .row
                        .col
                            img(src='/img/anh1.webp')
                            h3 SHOP THE MAN
                        .col
                            img(src='/img/anh3.webp')
                            h3 SHOP THE WOMAN
                        .col
                            img(src='/img/anh2.webp')
                            h3 SHOP JEWERY
            div(class='section--two')
                div(class='section-two__title none')
                    h2 BEST SELLING
                    p BEST SELLING ITEM OF THIS MONTH
            .container
                each item in product 
                    div(class='section--two__main')
                        div(class='section--two--item')
                            div(class='section--two--item__img')
                                img(src=item.images[0])
                            div(class='section--two--item_des')
                                p #{item.title}
                                h6 $#{item.price}
            div(class='section--three none')
                .container
                    div(class='section--three--rowone')
                        div(class='section--three--rowone__left')
                            div(class='section--three--rowone__left__title')
                                h3 This week&rsquo;s highlights
                                p
                                    | Here is your chance to upgrade your wardrobe with a
                                    | variation of styles
                                div(class='button--one ') SHOP NOW
                        div(class='section--three--rowone__right')
                            img(src='/img/section3-right.jpg')
                    .row
                        .col(class='section--three--rowtwo')
                            img(src='/img/anh4.webp')
                            div(class='button--two ') WOMEN&apos;S
                        .col(class='section--three--rowtwo')
                            img(src='/img/anh5.webp')
                            div(class='button--two') MEN
                        .col(class='section--three--rowtwo')
                            img(src='/img/anh6.webp')
                            div(class='button--two ') KIDS
                    div(class='button--four__title') AS SEEN IN
                    .row
                        .col
                            img(src='/img/logo1.webp')
                        .col
                            img(src='/img/logo2.webp')
                        .col
                            img(src='/img/logo3.webp')
                        .col
                            img(src='/img/logo4.webp')
                        .col
                            img(src='/img/logo5.webp')
                        .col
                            img(src='/img/logo6.webp')
                        .col
                            img(src='/img/logo7.webp')
                        .col
                            img(src='/img/logo8.webp')
            .container(class='none')
                div(class='section--four')
                    div(class='section--four__title')
                        h2
                            b FRESH FROM OUR BLOG
                            p You are going to love this amazing shopify theme.
                    .row
                        .col(class='section--four__block')  
                            img(src='/img/section41.jpg')
                            div(class='section--four--block__title')
                                p Ensuring Customer Success
                                a April 25, 2020
                        .col(class='section--four__block')
                            img(src='/img/section42.jpg')
                            div(class='section--four--block__title')
                                p We can make your business shine!
                                a April 25, 2020
                        .col(class='section--four__block')
                            img(src='/img/section43.webp')
                            div(class='section--four--block__title')
                                p Our development is your success
                                a April 25, 2020
            div(class='section--five')
                .container(class='none')
                    .row
                        .col
                            div(class='section--five__wrap')
                                div(class='section--five__icon')
                                    i.fa-solid.fa-cart-shopping
                                div(class='section--five__des')
                                    h5 FREE SHIPPING &amp; RETURN
                                    p Free shipping on all US orders
                        .col
                            div(class='section--five__wrap')
                                div(class='section--five__icon')
                                    i.fa-solid.fa-money-bill
                                div(class='section--five__des')
                                    h5 FREE SHIPPING &amp; RETURN
                                    p Free shipping on all US orders
                        .col
                            div(class='section--five__wrap')
                                div(class='section--five__icon')
                                    i.fa-solid.fa-phone
                                div(class='section--five__des')
                                    h5 FREE SHIPPING &amp; RETURN
                                    p Free shipping on all US orders                      
            include ../includes/footer.include.pug
    script(src="/js/scroll-header.js")
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
