doctype html
html
    head 
        link(rel="stylesheet", href="/css/style.css")
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css' integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==' crossorigin='anonymous' referrerpolicy='no-referrer')
    body
    div(class='screen')
        div(class='main')
            include ../includes/header.include.pug                   
            div(class='layoutproduct')
                a(href="/") Home 
                span > 
                a(href="/products") Product
                span > 
                a(href="/products") Detail
            .container
                div(class="products_wrap")
                    div(class="products_left")
                        div(class="image_top")
                            img(src=Product.images[0], alt="", srcset="")
                        div(class="image_bottom")
                            each img, index in Product.images
                                div(class="image_list")
                                    img(src=img, alt="", srcset="")
                    div(class="products_right")
                        h5 #{Product.title}
                        p(class="description") Mô tả:  #{Product.description}
                        p Giá: $#{Product.price}
                        p Loại sản phẩm: #{Product.category.name}
                        p Trạng thái : #{Product.status}
                        p Số lượng còn lại: #{Product.stock}
                        div(class="quantity")
                            form(action=`/products/addCart/${Product.id}`, method="post") 
                                label(for="quantity") Số lượng
                                input(type="number", name="quantity" min=1) 
                                button(class="addCart") Thêm vào giỏ hàng
    script(src="/js/scroll-header.js")
    script(src="/js/search.js")
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')